
<html>
  <head>
    <title>Tetris Game</title>
    <style>
      /* Add styling for the game area and the blocks */
      #game-area {
        width: 200px;
        height: 400px;
        border: 1px solid black;
      }
      .block {
        width: 20px;
        height: 20px;
        border: 1px solid black;
        display: inline-block;
      }
      .block.I {
        background-color: cyan;
      }
      .block.O {
        background-color: yellow;
      }
      .block.T {
        background-color: purple;
      }
      .block.S {
        background-color: green;
      }
      .block.Z {
        background-color: red;
      }
      .block.J {
        background-color: blue;
      }
      .block.L {
        background-color: orange;
      }
    </style>
  </head>
  <body>
    <div id="game-area"></div>
    <div>
      <label for="next-block">Next Block:</label>
      <select id="next-block">
        <option value="I">I</option>
        <option value="O">O</option>
        <option value="T">T</option>
        <option value="S">S</option>
        <option value="Z">Z</option>
        <option value="J">J</option>
        <option value="L">L</option>
      </select>
      <button onclick="addNextBlock()">Add Block</button>
    </div>
    <script>
      // Define the game area and the array to store the blocks
      const gameArea = document.getElementById("game-area");
      const blocks = [];

      // Function to add a block to the game area
      function addBlock(blockType) {
        const block = document.createElement("div");
        block.classList.add("block", blockType);
        gameArea.appendChild(block);
        blocks.push(block);
      }

      // Function to remove all blocks from the game area
      function clearBlocks() {
        for (let i = 0; i < blocks.length; i++) {
          gameArea.removeChild(blocks[i]);
        }
        blocks.length = 0;
      }

      // Function to add the next block to the game area
      function addNextBlock() {
        const nextBlockSelect = document.getElementById("next-block");
        const nextBlockType = nextBlockSelect.value;
        addBlock(nextBlockType);
        nextBlockSelect.selectedIndex = 0;
      }
    </script>
  </body>
</html>
